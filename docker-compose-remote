version: '3'
services:
  eureka-serviceregistry:
    image: gcr.io/oceanic-oxide-240620/rso/eureka:1.0
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]
    ports:
     - "8761:8761"
    tty:
      true
    restart:
      unless-stopped
    networks:
      - webnet

  zuul-edgeservice:
    image: gcr.io/oceanic-oxide-240620/rso/zuul:1.0
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]
    ports:
     - "8762:8762"
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
    tty:
      true
    restart:
      unless-stopped
    networks:
      - webnet

  pub-service:
    image: gcr.io/oceanic-oxide-240620/rso/pub-service:1.0.1
    deploy:
      replicas: 1
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
    tty:
      true
    restart:
      unless-stopped
    networks:
      - webnet

  user-service:
    image: gcr.io/oceanic-oxide-240620/rso/user-service:1.0.1
    deploy:
      replicas: 3
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
    tty:
      true
    restart:
      unless-stopped
    networks:
      - webnet

  review-service:
    image: gcr.io/oceanic-oxide-240620/rso/review-service:1.0.2
    deploy:
      replicas: 3
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
    tty:
      true
    restart:
      unless-stopped
    networks:
      - webnet
networks:
  webnet:
