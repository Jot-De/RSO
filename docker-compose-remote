version: '3'
services:
  eureka-serviceregistry:
    image: gcr.io/oceanic-oxide-240620/rso/eureka:1.0
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]
    ports:
     - "8761:8761"
    tty:
      true
    restart_policy:
      condition: on-failure
    networks:
      - webnet

  zuul-edgeservice:
    image: gcr.io/oceanic-oxide-240620/rso/zuul:1.0.8
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]
    ports:
     - "8762:8762"
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
    tty:
      true
    restart_policy:
      condition: on-failure
    networks:
      - webnet

  pub-service:
    image: gcr.io/oceanic-oxide-240620/rso/pub-service:1.1.8
    deploy:
      replicas: 1
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
    tty:
      true
    restart_policy:
      condition: on-failure
    networks:
      - webnet

  user-service:
    image: gcr.io/oceanic-oxide-240620/rso/user-service:1.1.5
    deploy:
      replicas: 1
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
      - PRIVATE_KEY_PATH=/var/keys/priv.key
    tty:
      true
    volumes:
      - ./Services/keys/:/var/keys
    restart_policy:
      condition: on-failure
    networks:
      - webnet

  review-service:
    image: gcr.io/oceanic-oxide-240620/rso/review-service:1.1.5
    deploy:
      replicas: 1
    environment:
      - REGISTRY_HOST=eureka-serviceregistry
      - DB_HOST=34.65.167.6
      - DB_PORT=5432
    tty:
      true
    restart_policy:
      condition: on-failure
    networks:
      - webnet
networks:
  webnet:
